<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.function.mapper.LeavePostMapper">

    <resultMap type="LeavePost" id="LeavePostResult">
        <result property="id"    column="id"    />
        <result property="userId"    column="user_id"    />
        <result property="trueName"    column="true_name"    />
        <result property="isOut"    column="is_out"    />
        <result property="reason"    column="reason"    />
        <result property="file"    column="file"    />
        <result property="startTime"    column="start_time"    />
        <result property="endTime"    column="end_time"    />
        <result property="reviewerId"    column="reviewer_id"    />
        <result property="status"    column="status"    />
        <result property="createdAt"    column="created_at"    />
        <result property="updatedAt"    column="updated_at"    />
    </resultMap>

    <sql id="selectLeavePostVo">
        select id, user_id, true_name, is_out, reason, file, start_time, end_time, reviewer_id, status, created_at, updated_at from leave_post
    </sql>

    <select id="selectLeavePostList" parameterType="LeavePost" resultMap="LeavePostResult">
        <include refid="selectLeavePostVo"/>
        <where>
            <if test="userId != null  and userId != ''"> and user_id = #{userId}</if>
            <if test="trueName != null  and trueName != ''"> and true_name like concat('%', #{trueName}, '%')</if>
            <if test="reason != null  and reason != ''"> and reason like concat('%', #{reason}, '%')</if>
            <if test="params.beginStartTime != null and params.beginStartTime != '' and params.endStartTime != null and params.endStartTime != ''"> and start_time between #{params.beginStartTime} and #{params.endStartTime}</if>
            <if test="params.beginEndTime != null and params.beginEndTime != '' and params.endEndTime != null and params.endEndTime != ''"> and end_time between #{params.beginEndTime} and #{params.endEndTime}</if>
            <if test="reviewerId != null  and reviewerId != ''"> and reviewer_id = #{reviewerId}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
    </select>

    <select id="selectLeavePostById" parameterType="Long" resultMap="LeavePostResult">
        <include refid="selectLeavePostVo"/>
        where id = #{id}
    </select>

    <insert id="insertLeavePost" parameterType="LeavePost" useGeneratedKeys="true" keyProperty="id">
        insert into leave_post
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null and userId != ''">user_id,</if>
            <if test="trueName != null and trueName != ''">true_name,</if>
            <if test="isOut != null and isOut != ''">is_out,</if>
            <if test="reason != null">reason,</if>
            <if test="file != null">file,</if>
            <if test="startTime != null and startTime != ''">start_time,</if>
            <if test="endTime != null and endTime != ''">end_time,</if>
            <if test="reviewerId != null and reviewerId != ''">reviewer_id,</if>
            <if test="status != null">status,</if>
            <if test="createdAt != null">created_at,</if>
            <if test="updatedAt != null">updated_at,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null and userId != ''">#{userId},</if>
            <if test="trueName != null and trueName != ''">#{trueName},</if>
            <if test="isOut != null and isOut != ''">#{isOut},</if>
            <if test="reason != null">#{reason},</if>
            <if test="file != null">#{file},</if>
            <if test="startTime != null and startTime != ''">#{startTime},</if>
            <if test="endTime != null and endTime != ''">#{endTime},</if>
            <if test="reviewerId != null and reviewerId != ''">#{reviewerId},</if>
            <if test="status != null">#{status},</if>
            <if test="createdAt != null">#{createdAt},</if>
            <if test="updatedAt != null">#{updatedAt},</if>
        </trim>
    </insert>

    <update id="updateLeavePost" parameterType="LeavePost">
        update leave_post
        <trim prefix="SET" suffixOverrides=",">
            <if test="userId != null and userId != ''">user_id = #{userId},</if>
            <if test="trueName != null and trueName != ''">true_name = #{trueName},</if>
            <if test="isOut != null and isOut != ''">is_out = #{isOut},</if>
            <if test="reason != null">reason = #{reason},</if>
            <if test="file != null">file = #{file},</if>
            <if test="startTime != null and startTime != ''">start_time = #{startTime},</if>
            <if test="endTime != null and endTime != ''">end_time = #{endTime},</if>
            <if test="reviewerId != null and reviewerId != ''">reviewer_id = #{reviewerId},</if>
            <if test="status != null">status = #{status},</if>
            <if test="createdAt != null">created_at = #{createdAt},</if>
            <if test="updatedAt != null">updated_at = #{updatedAt},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteLeavePostById" parameterType="Long">
        delete from leave_post where id = #{id}
    </delete>

    <delete id="deleteLeavePostByIds" parameterType="String">
        delete from leave_post where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>